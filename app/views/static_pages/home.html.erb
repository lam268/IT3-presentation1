
  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
      <% Blog.all.each do |blog| %>
        <div class="post-preview">
          <%= link_to blog do %>
            <h2 class="post-title">
              <%= blog.title%>
            </h2>
          <% end %>
          <p class ="post-meta">
            Posted by <%= blog.user.email %>
            on <%= blog.created_at %>
          </p>
        </div>
      <% end %>
        <hr>
      </div>
    </div>
  </div>

  
